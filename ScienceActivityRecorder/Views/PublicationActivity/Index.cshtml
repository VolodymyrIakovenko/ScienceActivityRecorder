@model PublicationActivityIndexViewModel

@{
    ViewData["Title"] = "Публікаційна активність";
}

<div class="alert alert-success" role="alert" style="@(Model.OperationResult == OperationResult.Success ? "display:block" : "display:none")">
    <strong>Інформація збережена!</strong>
</div>

<div class="alert alert-danger" role="alert" style="@(Model.OperationResult == OperationResult.Error ? "display:block" : "display:none")">
    <strong>Помилка під час збереження!</strong>
</div>

<form asp-controller="PublicationActivity" asp-action="Index" class="form-horizontal" style="padding-bottom: 20px" asp-antiforgery="true">

    <input type="hidden" asp-for="PublicationActivity.Id" />
    <input type="hidden" asp-for="PublicationActivity.LastFillDate" />

    <div class="form-group row">
        <div class="col-md-12">
            <label asp-for="PublicationActivity.Num1PublicationsInScienceMetricDatabases" postfix-text=":"></label>
            <textarea asp-for="PublicationActivity.Num1PublicationsInScienceMetricDatabases" rows="5" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <input class="btn btn-default" type="submit" asp-action="AuthorSearchWithPublicationParameters" asp-route-isNum1="true" value="Знайти статті по автору"/>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <label asp-for="PublicationActivity.Num2PublicationsInUkrainianDatabases" postfix-text=":"></label>
            <textarea asp-for="PublicationActivity.Num2PublicationsInUkrainianDatabases" rows="5" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <input class="btn btn-default" type="submit" asp-action="AuthorSearchWithPublicationParameters" asp-route-isNum2="true" value="Знайти статті по автору" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <label asp-for="PublicationActivity.Num3TextbookAvailability" postfix-text=":"></label>
            <textarea asp-for="PublicationActivity.Num3TextbookAvailability" rows="5" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <label asp-for="PublicationActivity.Num14TeachingManualsAvailibility" postfix-text=":"></label>
            <textarea asp-for="PublicationActivity.Num14TeachingManualsAvailibility" rows="5" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <label asp-for="PublicationActivity.Num18PopularSciencePublicationsAvailibility" postfix-text=":"></label>
            <textarea asp-for="PublicationActivity.Num18PopularSciencePublicationsAvailibility" rows="5" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <input class="btn btn-primary" type="submit" value="Зберегти" />
        </div>
    </div>

</form>